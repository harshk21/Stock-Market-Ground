<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/loaderLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/stroke"
    android:clickable="true"
    android:orientation="vertical">

    <ProgressBar
        android:id="@+id/main_progress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:theme="@style/WhiteAccent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.smg.stock_market_ground.utils.customViews.textViews.TextViewRegular
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_14sdp"
        android:text="@string/please_wait"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="@dimen/_16sdp"
        app:layout_constraintEnd_toEndOf="@+id/main_progress"
        app:layout_constraintStart_toStartOf="@+id/main_progress"
        app:layout_constraintTop_toBottomOf="@+id/main_progress" />


</androidx.constraintlayout.widget.ConstraintLayout>